<div class="container">
    <h1>{{title}}</h1>

    <div class="row">
        <div class="col-lg-12">
            <form>
                <div class="input-group">
                    <input type="text" class="form-control" id="sok" placeholder="Skriv inn produkt">
                <span class="input-group-btn">
                    <button id="sokeknapp" type="submit" class="btn btn-default">Submit</button>
                </span>
                </div>
            </form>
        </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th></th>
            <th>Merke</th>
            <th width="200px;">Modell</th>
            <th>Pris</th>
            <th>Beskrivelse</th>
        </tr>
        </thead>
        <tbody>
        {{#produkter}}
            <tr>
                <td><img src='{{bilde}}' style='height: 100px;'></td>
                <td>{{merke}} </td>
                <td>{{modell}}</td>
                <td>{{pris}}</td>
                <td>{{beskrivelse}}</td>
            </tr>
        {{/produkter}}
        </tbody>
    </table>

</div>
<script>
    $("#sokeknapp").click(function () {
        console.log("ASDASD");
        $.ajax(
                {
                    url: '/produkter/sok',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({query: $('#sok').val()}),
                    success: function (msg) {
                        console.log(msg);
                    }
                }
        )
    });
</script>